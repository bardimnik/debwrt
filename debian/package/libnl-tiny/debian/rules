#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

DEB_HOST_GNU_TYPE?=$(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
CC=$(DEB_HOST_GNU_TYPE)-gcc
export CC

%:
	dh $@ 

build: 
	dh_testdir
	dh_auto_configure

	$(MAKE) -C src

	dh_auto_test

override_dh_auto_install:
	install -d debian/libnl-tiny/usr/lib
	install src/libnl-tiny.so debian/libnl-tiny/usr/lib/libnl-tiny.so
	install -d debian/libnl-tiny-dev/usr/include/netlink-tiny
	-find src/include/ -type d -name ".svn" -exec rm -rf {} \;
	cp -a src/include/* debian/libnl-tiny-dev/usr/include/netlink-tiny

override_dh_auto_clean:
	rm -f src/libnl-tiny.so src/*.o

























































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































